<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cordova.boilerplate" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloWorld</name>
    <description>
        Basic Single Page App Written for Apache Cordova using BootStrap.
    </description>
    <author email="britton@x2labs.com" href="https://www.x2labs.com">
        Britton Scritchfield
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <preference name="windows-target-version" value="10.0" />

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="resources/icon/ios/icon-1024.png" width="1024" height="1024"/>
        <icon src="resources/icon/ios/icon-small.png" width="29" height="29"/>
        <icon src="resources/icon/ios/icon-small@2x.png" width="58" height="58"/>
        <icon src="resources/icon/ios/icon-small@3x.png" width="87" height="87"/>
        <icon src="resources/icon/ios/icon-small-40.png" width="40" height="40"/>
        <icon src="resources/icon/ios/icon-small-40@2x.png" width="80" height="80"/>
        <icon src="resources/icon/ios/icon-small-40@3x.png" width="120" height="120"/>
        <icon src="resources/icon/ios/icon-small-50.png" width="50" height="50"/>
        <icon src="resources/icon/ios/icon-small-50@2x.png" width="100" height="100"/>
        <icon src="resources/icon/ios/icon.png" width="57" height="57"/>
        <icon src="resources/icon/ios/icon@2x.png" width="114" height="114"/>
        <icon src="resources/icon/ios/icon-60.png" width="60" height="60"/>
        <icon src="resources/icon/ios/icon-60@2x.png" width="120" height="120"/>
        <icon src="resources/icon/ios/icon-60@3x.png" width="180" height="180"/>
        <icon src="resources/icon/ios/icon-72.png" width="72" height="72"/>
        <icon src="resources/icon/ios/icon-72@2x.png" width="144" height="144"/>
        <icon src="resources/icon/ios/icon-76.png" width="76" height="76"/>
        <icon src="resources/icon/ios/icon-76@2x.png" width="152" height="152"/>
        <icon src="resources/icon/ios/icon-167.png" width="167" height="167"/>
        <icon src="resources/icon/ios/icon-83.5@2x.png" width="167" height="167"/>
        <!--  Storyboard portrait  -->
        <splash src="resources/screen/ios/Default@2x~iphone~anyany.png"/>
        <splash src="resources/screen/ios/Default@2x~iphone~comany.png"/>
        <splash src="resources/screen/ios/Default@3x~iphone~anyany.png"/>
        <splash src="resources/screen/ios/Default@3x~iphone~comany.png"/>
        <splash src="resources/screen/ios/Default@2x~ipad~anyany.png"/>
        <splash src="resources/screen/ios/Default@2x~ipad~comany.png"/>
        <!--  Storyboard landscape  -->
        <splash src="resources/screen/ios/Default@2x~iphone~comcom.png"/>
        <splash src="resources/screen/ios/Default@3x~iphone~anycom.png"/>
        <!--  Legacy portrait  -->
        <splash src="resources/screen/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="resources/screen/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="resources/screen/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="resources/screen/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="resources/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="resources/screen/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="resources/screen/ios/Default-736h.png" width="1242" height="2208"/>
        <!--  Legacy landscape  -->
        <splash src="resources/screen/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="resources/screen/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
    </platform>

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true"/>
        <preference name="SplashShowOnlyFirstTime" value="true"/>
        <icon density="ldpi" src="resources/icon/android/ldpi.png"/>
        <icon density="mdpi" src="resources/icon/android/mdpi.png"/>
        <icon density="hdpi" src="resources/icon/android/hdpi.png"/>
        <icon density="xhdpi" src="resources/icon/android/xhdpi.png"/>
        <icon density="xxhdpi" src="resources/icon/android/xxhdpi.png"/>
        <icon density="xxxhdpi" src="resources/icon/android/xxxhdpi.png"/>
        <!--  Portrait  -->
        <splash density="port-ldpi" src="resources/screen/android/splash-port-ldpi.png"/>
        <splash density="port-mdpi" src="resources/screen/android/splash-port-mdpi.png"/>
        <splash density="port-hdpi" src="resources/screen/android/splash-port-hdpi.png"/>
        <splash density="port-xhdpi" src="resources/screen/android/splash-port-xhdpi.png"/>
        <splash density="port-xxhdpi" src="resources/screen/android/splash-port-xxhdpi.png"/>
        <splash density="port-xxxhdpi" src="resources/screen/android/splash-port-xxxhdpi.png"/>
        <!--  Landscape  -->
        <splash density="land-ldpi" src="resources/screen/android/splash-land-ldpi.png"/>
        <splash density="land-mdpi" src="resources/screen/android/splash-land-mdpi.png"/>
        <splash density="land-hdpi" src="resources/screen/android/splash-land-hdpi.png"/>
        <splash density="land-xhdpi" src="resources/screen/android/splash-land-xhdpi.png"/>
        <splash density="land-xxhdpi" src="resources/screen/android/splash-land-xxhdpi.png"/>
        <splash density="land-xxxhdpi" src="resources/screen/android/splash-land-xxxhdpi.png"/>
    </platform>

    <platform name="windows">
        <icon src="resources/icon/windows/storelogo.png" target="StoreLogo"/>
        <icon src="resources/icon/windows/smalllogo.png" target="Square30x30Logo"/>
        <icon src="resources/icon/windows/Square44x44Logo.png" target="Square44x44Logo"/>
        <icon src="resources/icon/windows/Square70x70Logo.png" target="Square70x70Logo"/>
        <icon src="resources/icon/windows/Square71x71Logo.png" target="Square71x71Logo"/>
        <icon src="resources/icon/windows/Square150x150Logo.png" target="Square150x150Logo"/>
        <icon src="resources/icon/windows/Square310x310Logo.png" target="Square310x310Logo"/>

        <splash src="resources/screen/windows/splashscreen.png" target="SplashScreen"/>
        <splash src="resources/screen/windows/splashscreenphone.png" target="SplashScreenPhone"/>
    </platform>
</widget>
